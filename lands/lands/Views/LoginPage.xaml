<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lands.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10,20,10,5">
            <Label Text="Lands" FontSize="Large"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Image Source="earth" WidthRequest="200"></Image>

            <Label Text="E-mail"></Label>
            <Entry Placeholder="Informe seu e-mail"
                   Keyboard="Email"></Entry>

            <Label Text="Senha"></Label>
            <Entry Placeholder="Informe sua senha"
                   IsPassword="True"></Entry>

            <ActivityIndicator></ActivityIndicator>

            <Button Text="Login" BackgroundColor="Navy"
                    TextColor="White" BorderRadius="23"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>